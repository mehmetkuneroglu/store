@model Product
<div class="col-sm-12 col-md-6 col-lg-3">
    <div class="card mb-3">
        <div class="card-header">
            <h4 class="card-title text-center "><a class="text-decoration-none" asp-controller="Product"
                    asp-action="Get" asp-route-id="@Model.ProductId">@Model.ProductName</a></h4>
        </div>
        <div class="p-2">
            <a class="text-decoration-none" asp-controller="Product" asp-action="Get" asp-route-id="@Model?.ProductId">
                <img src="@Model?.ImageUrl" style="height: 25rem;" class="card-img-top object-fit-fill" alt="Ürün"></a>
        </div>

        <div class="card-body">
            <p class="text-danger fw-bold text-center">@Model?.Price.ToString("C2")</p>
            <p class="card-text">@(@Model?.Summary?.Length >= 50 ? @Model?.Summary?.Substring(0, 50) + "..." :
                @Model?.Summary)</p>
            <form id="@Model?.ProductId" asp-page="/cart" method="post">
                <div class="d-flex justify-content-center">
                    <div class="btn-group " role="group">
                        <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Get"
                            asp-route-id="@Model?.ProductId">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>
                        <button type="submit" class="btn btn-outline-primary"><i class="fa fa-cart-plus"></i></button>
                    </div>
                </div>
                <input type="hidden" asp-for="ProductId">
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()">
            </form>
        </div>
    </div>
    
</div>