@model ProductListViewModel

@section Footer {
    
}
<h1>Products</h1>
<div class="row">
    <div class="col-lg-3 px-3">
        @await Component.InvokeAsync("CategoriesMenu")
        @await Component.InvokeAsync("ProductFilterMenu")
        <div products="" number="6"></div>
    </div>
    <div class="col-lg-9">
        <div class="row">

            @foreach (Product prd in Model.Products)
            {
                <partial name="_ProductCard" model="prd" />

            }
        </div>
        <div page-model="@Model.Pagination" page-action="Index" page-classes-enabled="true" 
        page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-dark" class="btn-group"></div>
    </div>

</div>
