@page "/cart"
@model CartModel
<div>
    <h3 class="display-5 text-center my-4">Cart</h3>
</div>
<div class="card">
    <table>
        <thead>
            <tr>
              
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Cart.Lines)
        {
            <tr>                
                <td>@item.Product.ProductName</td>
                <td>@item.Product.Price.ToString("c")</td>
                <td>@item.Quantity</td>
                <td>@((item.Quantity*item.Product.Price).ToString("c"))</td>
                <td>
                    <form id="@item.Product.ProductId" asp-page-handler="Remove" method="post">
                        <input type="hidden" name="id" value="@item.Product.ProductId">
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl">
                        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                    </form>
                </td>                
            </tr>
        }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" ><h5 class="text-end">Total Price :</h5></td>
                <td><h5 class="text-danger">@Model.Cart.ComputeTotalValue().ToString("c")</h5></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    <div class="text-center">
        <div class="button-group">
            <a href="@Model?.ReturnUrl" class="btn btn-primary mb-3">Continue Shopping</a>
            <a asp-action="Checkout" asp-controller="Order" class="btn btn-primary mb-3">Checkout</a>
        </div>
    </div>
</div>