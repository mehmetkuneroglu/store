@model IEnumerable<Product>
<h1 class="my-4 text-center">Products</h1>
<div class="d-flex p-3">
    <a class="btn btn-primary ms-auto" asp-controller="Product" asp-action="Create"><i class="fa fa-plus"></i>
        NewProduct</a>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Photo</th>
            <th>ProductName</th>
            <th>Price</th>
            <th>Process</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 100px;"><img class="img-fluid" style="height: 2.5rem;" src="@item.ImageUrl" alt=""></td>
                <td>@item.ProductName</td>
                <td>@item.Price.ToString("c2")</td>
                <td style="width: 150px;">
                    <div class="btn-group">
                        <a class="btn btn-success" asp-route-id="@item.ProductId" asp-controller="Product"
                            asp-action="Update"><i class="fa-solid fa-edit"></i> Edit</a>
                        <a class="btn btn-danger" asp-route-id="@item.ProductId" asp-controller="Product"
                            asp-action="Delete"><i class="fa-solid fa-trash"></i> Delete</a>
                        <a class="btn btn-outline-success" asp-area="" target="_blank" asp-controller="Product" asp-action="Get" asp-route-id="@item.ProductId"><i class="fa-solid fa-search"></i> Web</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>